@using System.Text
@{
    ViewBag.Title = "Activies ";
}

    <style>
        .child-opener-image
        {
            cursor: pointer;
        }
        .child-opener-image-column
        {
            text-align: center;
        }
        .jtable-dialog-form
        {
            min-width: 220px;
        }
        .jtable-dialog-form input[type="text"]
        {
            min-width: 200px;
        }

        .date-column {
            min-width: 80px;
            max-width: 80px;
            width: 80px;
        }

    </style>

@section Scripts {
<script src="~/js/jquery-ui.js" @*asp-append-version="true"*@></script>
<link href="/js/jtable/themes/vlad/jtable.css" rel="stylesheet" type="text/css" />
<link href="~/css/jui-theme/jquery-ui-1.8.5.custom.css" rel="stylesheet" />
<script src="~/js/jtable/vlad.jquery.jtable.js"></script>
    }

<div id="ActivitiesTableContainer"></div>
<script type="text/javascript">

    $(document).ready(function () {

        $('#ActivitiesTableContainer').jtable({
            title: 'Example Table View',
            paging: true,
            pageSize: 50,
            sorting: true,
            defaultSorting: 'Created DESC',

            actions: {
                refreshRowAction: '/ExampleAJax/GetKeyList',
                listAction: '/ExampleAJax/GetKeyList',
                deleteAction: '/ExampleAJax/DeleteKey',
                updateAction: '/ExampleAJax/UpdateKey',
                createAction: '/ExampleAJax/CreateKey")'
            },
            fields: {

                Created: {
                    title: 'Created',
                    create: false,
                    edit: false,
                    sorting: true,
                    type: 'date',
                    displayFormat: 'dd/mm/yy HH:TT:ss',
                    list: true,
                    width: '160px'
                  
                },
                Key: {
                    title: 'Key',
                    key: true,
                    sorting: true,
                    create: true,
                    edit: true,
                    width: '100%',
                    defaultValue:'default value'
                }
                ,
                IntData: {
                    title: 'Number',
                    key: false,
                    sorting: true,
                    width: '80px',
                    type:'number'
                }

            }
        });

         $('#ActivitiesTableContainer').jtable('load');

    });

</script>
